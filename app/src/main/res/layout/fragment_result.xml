<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_main_16"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".fragments.result.ResultFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_word"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_word" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_prev_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_8"
        android:text="@string/previous_fragment" />


</LinearLayout>